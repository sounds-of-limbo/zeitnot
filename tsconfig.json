{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES5",
		"outDir": "./dist",
		"declaration": true,
		"strict": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"sourceMap": true,
		"types": ["node"],
		"lib": ["ES6", "DOM", "DOM.Iterable"],
		"jsx": "react",
		"typeRoots": [
			"./node_modules/@types"
		]
	},
	"exclude": [
		"src/**/*.test.ts",
		"dist"
	]
}